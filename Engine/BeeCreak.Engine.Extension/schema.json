{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.becreak.dev/content/assets",
  "title": "BeeCreak Content Assets",
  "description": "Schema definitions describing the JSON payload for each BeeCreak content asset type.",
  "x-runtimeNamespace": "BeeCreak.Engine.Data",
  "x-runtimeAssembly": "BeeCreak.Engine",
  "type": "object",
  "definitions": {
    "Animation": {
      "x-fileExtension": ".as",
      "title": "Animation",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Unique animation identifier."
        },
        "spriteSheet": {
          "type": "string",
          "minLength": 1,
          "description": "Sprite sheet asset id that contains the animation frames."
        },
        "data": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Ordered list of sprite ids that form the animation."
        }
      },
      "required": ["id", "spriteSheet", "data"]
    },
    "BoundingBoxSheet": {
      "x-fileExtension": ".bbs",
      "title": "BoundingBoxSheet",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "boundingBoxes": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "w": { "type": "integer" },
              "h": { "type": "integer" },
              "width": { "type": "integer" },
              "height": { "type": "integer" }
            },
            "required": ["x", "y"],
            "allOf": [
              {
                "anyOf": [
                  { "required": ["w", "h"] },
                  { "required": ["width", "height"] }
                ]
              }
            ]
          }
        }
      },
      "required": ["id", "boundingBoxes"]
    },
    "Locale": {
      "x-fileExtension": ".json",
      "title": "Locale",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "translations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["id", "translations"]
    },
    "SpriteSheet": {
      "x-fileExtension": ".spritesheet",
      "title": "SpriteSheet",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "texture": {
          "type": "string",
          "minLength": 1
        },
        "data": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" },
              "w": { "type": "integer" },
              "h": { "type": "integer" }
            },
            "required": ["x", "y", "w", "h"]
          }
        }
      },
      "required": ["id", "image", "data"]
    },
    "TextSet": {
      "x-fileExtension": ".bts",
      "title": "TextSet",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "font": {
          "type": "string"
        },
        "text": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["id", "font", "text"]
    }
  }
}
