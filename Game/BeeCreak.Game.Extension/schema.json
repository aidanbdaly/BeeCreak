{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.becreak.dev/content/assets",
  "title": "BeeCreak Content Assets",
  "description": "Schema definitions describing the JSON payload for each BeeCreak content asset type.",
  "x-runtimeNamespace": "BeeCreak.Game",
  "x-runtimeAssembly": "BeeCreak.Game",
  "type": "object",
  "definitions": {
    "CellRecord": {
      "x-fileExtension": ".crec",
      "title": "CellRecord",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"]
    },
    "CellReference": {
      "x-fileExtension": ".cref",
      "title": "CellReference",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "cellRecord": {
          "type": "string",
          "minLength": 1,
          "description": "Id of the CellRecord that defines the base layout."
        },
        "entityReferenceArray": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true,
          "description": "Entity reference ids to spawn within this cell."
        },
        "tileMap": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id", "base", "tileMap"]
    },
    "Entity": {
      "x-fileExtension": ".erec",
      "title": "Entity",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "animations": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "boundingBoxSheet": {
          "type": "string",
          "minLength": 1
        },
        "behaviours": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "required": ["id", "animations", "boundingBoxSheet", "behaviours"]
    },
    "EntityReference": {
      "x-fileExtension": ".eref",
      "title": "EntityReference",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "entity": {
          "type": "string",
          "minLength": 1
        },
        "variant": {
          "type": "string",
          "minLength": 1,
          "description": "Initial animation/behaviour variant."
        },
        "position": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          },
          "required": ["x", "y"]
        }
      },
      "required": ["id", "base", "cell", "variant", "position"]
    },
    "GameRecord": {
      "x-fileExtension": ".game",
      "title": "GameRecord",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "cellReference": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["activeCell"]
    },
    "TileMap": {
      "x-fileExtension": ".tref",
      "title": "TileMap",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "spriteSheet": {
          "type": "string",
          "minLength": 1
        },
        "boundingBoxSheet": {
          "type": "string",
          "minLength": 1
        },
        "data": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "description": "2D array of sprite ids representing rows and columns."
        }
      },
      "required": ["id", "spritesheet", "boundingBoxSheet", "data"]
    }
  }
}
