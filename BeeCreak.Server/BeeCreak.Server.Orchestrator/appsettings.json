{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Orchestrator": {
    "Namespace": "default",
    "ServerImage": "ghcr.io/aidanbdaly/beecreak-game-server:latest",
    "ContainerPort": 7777,
    "ExposeNodePort": true,
    "HeartbeatPath": "/heartbeat",
    "HeartbeatInitialDelaySeconds": 10,
    "HeartbeatPeriodSeconds": 10,
    "RestartPolicy": "Never",
    "PreferredNodeAddressType": "InternalIP",
    "ApiKey": "change-me",
    "ApiKeyHeader": "X-Api-Key",
    "DefaultArgs": [
      "--port",
      "{port}",
      "--session-id",
      "{serverId}"
    ]
  },
  "AllowedHosts": "*"
}
