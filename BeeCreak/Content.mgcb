
#----------------------------- Global Properties ----------------------------#

/outputDir:bin/$(Platform)
/intermediateDir:obj/$(Platform)
/platform:DesktopGL
/config:
/profile:Reach
/compress:False

#-------------------------------- References --------------------------------#

/reference:../BeeCreak.Content.Extensions/bin/Debug/net8.0/BeeCreak.Content.Extensions.dll

#---------------------------------- Content ---------------------------------#

#begin Content/Font/lookout.spritefont
/importer:FontDescriptionImporter
/processor:FontDescriptionProcessor
/processorParam:PremultiplyAlpha=True
/processorParam:TextureFormat=Compressed
/build:Content/Font/lookout.spritefont

#begin Content/Image/buttons.png
/importer:TextureImporter
